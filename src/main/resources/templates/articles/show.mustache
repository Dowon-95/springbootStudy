{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Contents</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th >{{id}}</th>
        <td >{{title}}</td>
        <td>{{contents}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>

<a href="/articles/{{id}}/edit" class="btn btn-primary">Edit</a>
<a href="/articles/{{id}}/delete" class="btn btn-danger">Delete</a>
<a href="/articles">Go to Article List</a>
{{>layouts/footer}}